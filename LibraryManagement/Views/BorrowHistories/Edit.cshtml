@model LibraryManagement.Models.BorrowHistory

@{
    ViewData["Title"] = "Edit";
}

<h4>Return Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BorrowHistoryId" />
            <div class="form-group">
                <label asp-for="FkBookId" class="control-label"></label>
                <select asp-for="FkBookId" class="form-control" asp-items="ViewBag.FkBookId"></select>
                <span asp-validation-for="FkBookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkCustomerId" class="control-label"></label>
                <select asp-for="FkCustomerId" class="form-control" asp-items="ViewBag.FkCustomerId"></select>
                <span asp-validation-for="FkCustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowDate" class="control-label"></label>
                <input asp-for="BorrowDate" class="form-control" />
                <span asp-validation-for="BorrowDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualReturnDate" class="control-label"></label>
                <input asp-for="ActualReturnDate" class="form-control" />
                <span asp-validation-for="ActualReturnDate" class="text-danger"></span>
            </div>
            <div><br/></div>
            <div class="form-group">
                <input type="submit" value="Return Book" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <br />
    <br />
</div>
<div>
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>

